<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dimen_16"
        >
        <com.kanhui.laowulao.widget.IconView
            android:id="@+id/iv_inspector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xe8bd;"
            android:textColor="@color/black_3"
            android:textSize="@dimen/font_30"
            android:textStyle="bold"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            />
        <TextView
            android:id="@+id/tv_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务启停"
            android:textColor="@color/black_3"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            />

        <com.kanhui.laowulao.widget.IconView
            android:id="@+id/iv_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xe6ef;"
            android:textColor="@color/black_3"
            android:textSize="@dimen/font_30"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />

    </RelativeLayout>

    <View style="@style/horizontal_line"
        android:id="@+id/line"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/dimen_16">

        <com.kanhui.laowulao.widget.IconView
            android:id="@+id/iv_light"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&#xe617;"
            android:textColor="@color/main_green"
            android:textSize="@dimen/font_50"
            android:layout_centerHorizontal="true"
            android:layout_margin="@dimen/dimen_20"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="启动"
            android:id="@+id/tv_start"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/dimen_50"
            android:gravity="center"
            android:textSize="@dimen/font_32"
            android:background="@drawable/btn_start_selector"
            android:textColor="@color/white"
            android:layout_below="@+id/iv_light"
            />
        <TextView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:text="暂停"
            android:id="@+id/tv_stop"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/tv_start"
            android:layout_marginTop="@dimen/dimen_50"
            android:gravity="center"
            android:textSize="@dimen/font_32"
            android:textColor="@color/white"
            android:background="@drawable/btn_stop_selector"
            />

    </RelativeLayout>

</LinearLayout>